@{
    @model List<FactoryManagementSystem.Models.Employee>
    ViewBag.Title = "Employee Edit";
    Layout = "~/Views/Shared/_Layouta.cshtml";
}

<div id="wrapper">

    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="panel panel-default container-fluid">
            <!-- Default panel contents -->
            <div class="panel-heading"><h2>Employee Details</h2></div>
            <table class="table table-hover">
                <tr>
                    <td><h4><span class="label label-info">Name</span></h4></td>
                    <td><h4><span class="label label-info">CNIC</span></h4></td>
                    <td><h4><span class="label label-info">Salary</span></h4></td>

                </tr>
               
                @foreach (var s in Model)
                {
                    
                    <tr>
                        <td><h5><span class="label label-default">@s.name</span></h5></td>
                        <td><h5><span class="label label-default">@s.cnic</span></h5></td>
                        <td><h5><span class="label label-default">@s.salary</span></h5><span class="glyphicon glyphicon-pencil">Edit</span><form method="post" action="/Edit/Employee_Do/@s.Id"><input type="number" class="form-control" name="amount" /><input type="submit" class="form-control btn btn-primary" /></form></td>

                    </tr>
                }
                


            </table>
        </div>

    </div>
</div>
