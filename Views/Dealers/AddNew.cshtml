@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <div id="page-wrapper">
             <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-12">
                        <h1 class="page-header">Employees
                           
                        </h1>
                    </div>
                    
                    
                </div>
                
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                   <div class="panel panel-default">
                       <form action="" method="post">
                       <div class="panel-heading">
                           Add new Employee
                       </div>
                       <div class="panel-body">
                           <div class="col-lg-6">
                                <div class="form-group">
                                            <label>Select Product</label>
                                            <select class="form-control" name="product_name">
                                                <option>Raw Material 1</option>
                                                <option>Raw Material 2</option>
                                                <option>Raw Material 3</option>
                                                <option>Raw Material 4</option>
                                                <option>Raw Material 5</option>
                                                <option>Raw Material 6</option>
                                                <option>Raw Material 7</option>
                                                <option>Raw Material 8</option>
                                            </select>
                                </div>
                                 
                           </div>
                           <div class="col-lg-6">
                               <div class="form-group">
                                            <label>Enter Quantity</label>
                                            <input class="form-control" name="quantity" type="number">
                               
                                        </div>
                                 
                           </div>
                           <div class="col-lg-6">
                                <div class="form-group">
                                            <label>Unit Price</label>
                                            <input class="form-control" name="unit_price">
                                          
                                        </div>
                                 
                           </div>
                           <div class="col-lg-6">
                                <div class="form-group">
                                            <label>Purchasing Date</label>
                                            <input class="form-control date" name="purchasing_date">
                                            
                                        </div>
                                 
                           </div>
                           <div class="col-lg-6">
                                <div class="form-group">
                                            <label>Production Start Date</label>
                                            <input class="form-control date" name="production_start_date">
                                           
                                        </div>
                                 
                           </div>
                           
                           <div class="col-lg-12" style="text-align:center;">
                               <button type="submit" class="btn btn-primary btn-lg" style="margin-right:5%;">Submit</button>
                               <button type="reset" class="btn btn-danger btn-lg">Reset</button>
                           </div>
                           

                       </div>
                      </form>
                   </div>
                </div>
             
            </div>
            
        </div>
