@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_LayoutTable.cshtml";
}

 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-12">
                        <h1 class="page-header">Employees
                            <a href="/Employees/AddNew" class="btn btn-primary btn-lg" style="float:right;">Add New Employee</a>

                        </h1>
                    </div>

                    
                    
                </div>
                
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Employee Records
                        </div>
                        <!-- /.panel-heading -->
                         <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Position</th>
                                            <th>Salary</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @{
                                        int count = 0 ;
                                        foreach (var x in Model)
                                        {
                                            count++;
                                            if (count % 2 == 0)
                                            {
                                                <tr class='odd gradeC'> 
                                                    <td>@count</td>
                                                    <td>@x.name</td>
                                                    <td>@x.designation</td>
                                                    <td class="center">@x.salary</td>
                                                    <td class="center">
                                                        @Html.ActionLink("<i class='fa fa-pencil-square-o'></i>","Edit", new {Id=3} , new{ @class="btn btn-primary btn-circle"})
                                                       <!-- <a href="/Employees/Edit" class="btn btn-primary btn-circle" ><i class="fa fa-pencil-square-o"></i></a>-->
                                                        <a href="/Employees/index/@x.Id" class="btn btn-danger btn-circle" ><i class="fa fa-trash"></i></a>
                                                    </td>
                                                 </tr>
                                            }
                                            else
                                            {
                                                <tr class='even gradeA'>
                                                    <td>@count</td>
                                                    <td>@x.name</td>
                                                    <td>@x.designation</td>
                                                    <td class="center">@x.salary</td>
                                                    <td class="center">
                                                        <a href="/Employees/Edit/@x.Id" class="btn btn-primary btn-circle" ><i class="fa fa-pencil-square-o"></i></a>
                                                        <a href="/Employees/Delete/@x.Id" class="btn btn-danger btn-circle" ><i class="fa fa-trash"></i></a>
                                                    </td>
                                                 </tr>
                                            }
                                            
                                            
                                        }
                                    }
                                        
                                    
                                        
                                   
                                        
                                        
                                    </tbody>
                                </table>
                            </div>
                            
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
           
        </div>