@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <div id="page-wrapper">
             <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-12">
                        <h1 class="page-header">Employees
                           
                        </h1>
                    </div>
                    
                    
                </div>
                
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                   <div class="panel panel-default">
                       <form action="/Employees/edit_record/@Model.Id" method="post">
                       <div class="panel-heading">
                           Add new Employee
                       </div>
                       <div class="panel-body">
                           <div class="col-lg-6">
                               <div class="form-group">
                                            <label>Name</label>
                                            <input class="form-control" name="name" type="text" value="@Model.name">
                               
                                        </div>
                                 
                           </div>
                           <div class="col-lg-6">
                               <div class="form-group">
                                            <label>CNIC Number</label>
                                            <input class="form-control" name="cnic" type="text" value="@Model.cnic">
                               
                                        </div>
                                 
                           </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                            <label>Date Of Birth</label>
                                            <input class="form-control date" name="dob" value="@Model.dob">
                                            
                                        </div>
                                 
                           </div>
                           <div class="col-lg-6">
                               <div class="form-group">
                                            <label>Designation</label>
                                            <input class="form-control" name="designation" type="text" value="@Model.designation">
                               
                                        </div>
                                 
                           </div>
                           <div class="col-lg-6">
                                <div class="form-group">
                                            <label>Salary</label>
                                            <input class="form-control" name="salary" type="number" value="@Model.salary">
                                          
                                        </div>
                                 
                           </div>
                           <div class="col-lg-6">
                                <div class="form-group">
                                            <label>Tax</label>
                                            <input class="form-control" name="tax" type="number" value="@Model.tax">
                                          
                                        </div>
                                 
                           </div>
                          
                           <div class="col-lg-6">
                                <div class="form-group">
                                            <label>Joining Date</label>
                                            <input class="form-control date" name="join_date" value="@Model.join_date">
                                           
                                        </div>
                                 
                           </div>
                           
                           <div class="col-lg-12" style="text-align:center;">
                               <button type="submit" class="btn btn-primary btn-lg" style="margin-right:5%;">Submit</button>
                               <button type="reset" class="btn btn-danger btn-lg">Reset</button>
                           </div>
                           

                       </div>
                      </form>
                   </div>
                </div>
             
            </div>
            
        </div>
