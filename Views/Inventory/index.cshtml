@model FactoryManagementSystem.Models.RawMaterial
@{
    ViewBag.Title = "Inventory";
    Layout = "~/Views/Shared/_LayoutTable.cshtml";
}

 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-12">
                        <h1 class="page-header">Inventory
                            <a href="/Inventory/AddNew" class="btn btn-primary btn-lg" style="float:right;">Add New Inventory</a>
                            <a href="/Inventory/issue_Inventory" class="btn btn-success btn-lg" style="float:right; margin-right:1%;">Issue Inventory</a>
                        </h1>
                    </div>
                    
                    
                </div>
                
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Inventory Records
                        </div>
                        <!-- /.panel-heading -->
                         <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Raw Material Name</th>
                                            <th>Unit Price</th>
                                            <th>Quantity</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      @{
                                          int count = 0;
                                          List<FactoryManagementSystem.Models.RawMaterial> b = ViewBag.RawMaterials;
                                           foreach(var x in ViewBag.Inventories)
                                           {
                                               count++;
                                               String p_name = b.Find(y => y.Id == x.Iid).name;
                                                if(count % 2 == 0 ){
                                                    
                                                    <tr class="even gradeC">
                                                        <td>@count</td>
                                                        <td>@p_name</td>
                                                        <td>@x.unit_price</td>
                                                        <td class="center">@x.quantity</td>
                                                        <td class="center">
                                                            <a href="/Inventory/Edit/@x.Id" class="btn btn-primary btn-circle" ><i class="fa fa-pencil-square-o"></i></a>
                                                        </td>
                                                    </tr>
                                               }
                                               else{
                                                   <tr class="odd gradeA">
                                                         <td>@count</td>
                                                        <td>@p_name</td>
                                                        <td>@x.unit_price</td>
                                                        <td class="center">@x.quantity</td>
                                                        <td class="center">
                                                            <a href="/Inventory/Edit/@x.Id" class="btn btn-primary btn-circle" ><i class="fa fa-pencil-square-o"></i></a>
                                                        </td>
                                                    </tr>
                                               }
                                           }
                                       }
                                      
                                       
                                        
                                    </tbody>
                                </table>
                            </div>
                            
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
           
        </div>