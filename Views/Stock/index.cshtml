@model FactoryManagementSystem.Models.Product
 @{
    ViewBag.Title = "Stock";
    Layout = "~/Views/Shared/_LayoutTable.cshtml";
  
}

 <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-12">
                        <h1 class="page-header">Stock
                            <a href="/Stock/AddNew" class="btn btn-primary btn-lg" style="float:right;">Add New Stock</a>
                        </h1>
                    </div>
                    
                    
                </div>
                
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Available Stocks
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Product Name</th>
                                            <th>Unit Price</th>
                                            <th>Quantity</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       @{
                                          int count = 0;
                                          List<FactoryManagementSystem.Models.Product> b = ViewBag.Products;
                                           foreach(var x in ViewBag.Stocks){
                                               count++;
                                               String p_name = b.Find(y => y.Id == x.pid).name;
                                               if(count % 2 == 0 ){
                                                    
                                                    <tr class="even gradeC">
                                                        <td>@count</td>
                                                        <td>@p_name</td>
                                                        <td>@x.unit_price</td>
                                                        <td class="center">@x.quantity</td>
                                                        <td class="center">
                                                            <a href="/Stock/Edit/@x.Id" class="btn btn-primary btn-circle" ><i class="fa fa-pencil-square-o"></i></a>
                                                        </td>
                                                    </tr>
                                               }
                                               else{
                                                   <tr class="odd gradeA">
                                                         <td>@count</td>
                                                        <td>@p_name</td>
                                                        <td>@x.unit_price</td>
                                                        <td class="center">@x.quantity</td>
                                                        <td class="center">
                                                            <a href="/Stock/Edit/@x.Id" class="btn btn-primary btn-circle" ><i class="fa fa-pencil-square-o"></i></a>
                                                        </td>
                                                    </tr>
                                               }
                                           }
                                       }
                                        
                                        
                                        
                                       
                                        
                                    </tbody>
                                </table>
                            </div>
                            
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
           
        </div>